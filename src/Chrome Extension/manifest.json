{
  "name": "Copy Emails Adobe Xd Prototype",
  "description": "Extension to copy to clipboard prototype e-mails to Adobe Xd links",
  "author": "rafael prado",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "24": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_title": "Copy Emails Adobe Xd Prototype",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "images/icon.png",
    "24": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "host_permissions": ["https://xd.adobe.com/", "https://adobe.com/"],
  "content_scripts": [
    {
      "matches": ["https://xd.adobe.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
